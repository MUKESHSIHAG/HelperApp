<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/fab_margin"

    tools:context=".HelpActivity">


    <EditText
        android:layout_marginTop="100dp"
        android:id="@+id/add_no_1_edit"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:hint="@string/add_number_to_help"
        android:inputType="number"
        android:maxLength="10"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/add_no_2_edit"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="5dp"
        android:hint="@string/add_second_number_to_help"
        android:padding="10dp"
        android:inputType="number"
        android:maxLength="10"/>

    <Button
        android:id="@+id/btn_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Update"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textColor="@android:color/black"/>

    <ProgressBar
        android:id="@+id/update_progress_bar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp"
        android:visibility="gone"/>


    <TextView
        android:id="@+id/number_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:textColor="@android:color/black"
        android:textAlignment="center"
        android:text="You registered in the Helper App"
        android:textSize="23sp"
        android:fontFamily="serif" />

    <TextView
        android:text="Content"
        android:id="@+id/location_updates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textSize="15sp"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textStyle="bold"/>

</LinearLayout>
